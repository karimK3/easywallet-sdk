{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": false,
      "moduleResolution": "node",
      "module": "ESNext",
      "target": "ES2019",
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "types": ["vitest/globals"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
  }